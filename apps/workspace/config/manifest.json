  "screenshots": [
    {
      "src": "/screenshots/editor.png",
      "type": "image/png",
      "sizes": "1280x720",
      "label": "Collaborative Document Editor"
    },
    {
      "src": "/screenshots/task-board.png",
      "type": "image/png",
      "sizes": "1280x720",
      "label": "Kanban Task Board"
    },
    {
      "src": "/screenshots/profile.png",
      "type": "image/png",
      "sizes": "1280x720",
      "label": "User Profile and Credit"
    }
  ],
  "categories": ["productivity", "collaboration", "business"],
  "shortcuts": [
    {
      "name": "New Document",
      "short_name": "New Doc",
      "description": "Create a new collaborative document",
      "url": "/documents/new",
      "icons": [
        {
          "src": "/icons/new-document.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Task Board",
      "short_name": "Tasks",
      "description": "Open task board",
      "url": "/boards",
      "icons": [
        {
          "src": "/icons/task-board.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf", "text/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+vudo",
      "url": "/open?url=%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "offline_enabled": true,
  "features": [
    "offline-first",
    "p2p-sync",
    "collaborative-editing",
    "mutual-credit",
    "decentralized-identity"
  ]
}
