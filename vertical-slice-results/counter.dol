// Counter.dol - Minimal vertical slice test
// This file tests the complete DOL -> WASM -> Runtime pipeline

/// Counter gen with increment and add methods
gen Counter {
    has value: i64

    fun increment() -> i64 {
        return value + 1
    }

    fun get_value() -> i64 {
        return value
    }

    fun add(n: i64) -> i64 {
        return value + n
    }
}

/// Standalone function for simpler test
fun add_numbers(a: i64, b: i64) -> i64 {
    return a + b
}
