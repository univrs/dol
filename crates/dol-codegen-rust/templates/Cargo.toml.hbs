{{! Handlebars template for generated Cargo.toml }}
[package]
name = "{{package_name}}"
version = "{{version}}"
edition = "2021"
authors = ["Generated by DOL"]

[dependencies]
# Automerge CRDT backend
automerge = "0.5"
autosurgeon = "0.8"

{{#if serde}}
# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
{{/if}}

{{#if wasm}}
# WASM support
wasm-bindgen = "0.2"
serde-wasm-bindgen = "0.6"
{{/if}}

{{#if includes_sets}}
# Collections (HashSet)
{{/if}}
{{#if includes_maps}}
# Collections (HashMap)
{{/if}}

[lib]
{{#if wasm}}
crate-type = ["cdylib", "rlib"]
{{else}}
crate-type = ["rlib"]
{{/if}}

{{#if wasm}}
[package.metadata.wasm-pack.profile.release]
wasm-opt = ["-Oz", "--enable-mutable-globals"]
{{/if}}
